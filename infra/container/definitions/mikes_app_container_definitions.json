[
  {
    "name": "${NAME}",
    "image": "644237782704.dkr.ecr.us-east-2.amazonaws.com/mikes_pedido:latest",
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ],
    "environment": [
      {
        "name": "DB_HOST",
        "value": "${DB_HOST}"
      },
      {
        "name": "DB_PORT",
        "value": "${DB_PORT}"
      },
      {
        "name": "DB_NAME",
        "value": "${DB_NAME}"
      },
      {
        "name": "DB_USER",
        "value": "${DB_USER}"
      },
      {
        "name": "DB_PASSWORD",
        "value": "${DB_PASSWORD}"
      },
      {
        "name": "SNS_ORDER_RECEIVED_ARN",
        "value": "${SNS_ORDER_RECEIVED_ARN}"
      },
      {
        "name": "SNS_ORDER_CONFIRMED_ARN",
        "value": "${SNS_ORDER_CONFIRMED_ARN}"
      },
      {
        "name": "SQS_ORDER_PAYMENT_URL",
        "value": "${SQS_ORDER_PAYMENT_URL}"
      },
      {
        "name": "SQS_ORDER_PRODUCTION_URL",
        "value": "${SQS_ORDER_PRODUCTION_URL}"
      },
      {
        "name": "AWS_REGION",
        "value": "${REGION}"
      },
      {
        "name": "REDIS_HOST",
        "value": "${REDIS_HOST}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${LOG_GROUP_NAME}",
        "awslogs-region": "us-east-2",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]